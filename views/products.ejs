<%- include("partials/header") %>

<div class="container featured-div">
	<div class="mt-2">
		<h4>Featured</h4>
	</div>
	<div class="row row-cols-1 row-cols-md-4 g-4 d-flex justify-content-around ">
		<% productsFeatured.forEach((p) => { %>
			<div class="col" id="ananan">
				<div class="card mt-1 shadow p-3 mb-5 bg-white rounded">
					<img src="<%= p.image %>" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title"><%= p.title %></h5>
						<p class="card-text"><%= p.price %> ₺</p>
					</div>
				</div>
			</div>
		<% }) %>
</div>
	
	
<div class="container all-div">
	<div class="mt-2">
		<h4>All Items</h4>
	</div>
	<div class="row row-cols-1 row-cols-md-4 g-4 d-flex justify-content-around ">
		<% products.forEach((product) => { %>
			<div class="col">
				<div class="card mt-1">
					<img src="<%= product.image %>" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title"><%= product.title %></h5>
						<p class="card-text"><%= product.price %> ₺</p>
					</div>
				</div>
			</div>
		<% }) %>

</div>


<%- include("partials/footer") %>